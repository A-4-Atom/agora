<div class="modal" tabindex="-1" id="delete-goal-modal" aria-labelledby="delete-goal-modal-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"> Goal <div id="goal-title"></div></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this goal?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">No</button>
          <button type="button" class="btn btn-primary" onclick="sendDeleteToBackend(parseInt(document.getElementById('goal-title').innerHTML),10)">Yes</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const closeDeleteModal = () => {
      // closes modal
      $('#delete-goal-modal').modal('hide');

      // removes darker backdrop after closing modal
      $('body').removeClass('modal-open');
      $('.modal-backdrop').remove();
    }

    const sendDeleteToBackend = async (id) => {
        await bankendDelete(id);
        closeDeleteModal();
    }


  </script>
<i class="fas fa-2x fa-plus-circle triadic" data-toggle="modal" data-target="#create-goal-modal" onclick='updateGoalModal(<%- JSON.stringify(goal).replace(/[\/\(\)\']/g, "&apos;") %>, "<%- process.env.GOAL_IMAGE_WEB_PATH %>");' ></i>
<span class="font-weight-bold text-secondary title-font-size text-uppercase"> | Goals</span>
<br />

<%
if(ownerGoals && ownerGoals.length > 0) {
    for(let i=0; i < ownerGoals.length; i++) {
        %>

        <a class="card" style="width: 100%;" data-toggle="modal" data-target="#create-goal-modal" onclick='updateGoalModal(<%- JSON.stringify(ownerGoals[i]).replace(/[\/\(\)\']/g, "&apos;") %>, "<%- process.env.GOAL_IMAGE_WEB_PATH %>");' id="goal_<%- ownerGoals[i].id %>">
            <div class="card-body-low-padding" name="enrolled_card">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                        <button class="btn tetradic3" aria-expanded="false" aria-controls="collapseOne">
                            <img class="img-supersmall" src="<%= process.env.GOAL_IMAGE_WEB_PATH%><%- ownerGoals[i].goalImage %>" />
                            <%- ownerGoals[i].goalName %>
                        </button>
                        
                        </h5> 
                        
                    </div>
                
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <%- ownerGoals[i].goalDescription %>
                        </div>
                    </div>
                </div>
            </div>
            <a class="fas fa-trash redColor" data-toggle="modal" data-target="#delete-goal-modal"onclick='sendIdToModal(<%-ownerGoals[i].id%>);'></a>
        </a> 

        
        <%
        if(!ownerGoals[i].active) {
            %>
            <span class="redColor">{Inactive}</span>
            <%
        }
        %>
            <br />
        <%
    }
}

%>




<!DOCTYPE html>

<html>

  <head>
    <script src="../../../../public/js/dashboard"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <%- include('../../../partials/head.ejs'); %>
    <%- include('./new-topic-goal.ejs')  %> 
  </head>

  <body>
    <!--Declaring ejs function to display cards-->
    <%- include('./delete-modal.ejs'); %>
    <%- include('./rename-modal.ejs'); %>
    <% //name:string, description:string, tags:array, content:array %>
    <% const renderCard=(id,name,desc,tags,contentType, content)=> { 
        
      if (contentType === "Note") { %>

        <!--Note Card -->
        <div class="col mb-3 gallery-col align-items-stretch">
          <div class="card h-100"  id="<%= id %>" onmouseover="toggleMoreOptionsOn(id)" onmouseout="toggleMoreOptionsOff(id)">
            <div class="dropdown" id="option-<%= id %>" style="visibility: hidden">
              <img src="/assets/img/buttons/more-options.png" class="dropbtn"/>
              <%- include('./dropdown.ejs'); %>
            </div>
            <div class="card-body d-flex flex-column" id="topic">
              <h5 class="card-title" id="card-title-<%= id %>">
                <%= name%>
              </h5>
              <p class="card-text mb-4" id="card-desc-<%= id %>">
                <%= desc%>
              </p>
            </div>
            <div class="card-footer">
              <% for(let i=0; i < tags.length; i++) { %>
                <span class="badge badge-primary topic-badge">
                  <%= tags[i]%>
                </span>
              <% } %>
              <span class="badge badge-dark note-badge">
                <%= contentType %>
              </span>
            </div>
          </div>
        </div>
      <% } else if (contentType === "Goal") { %>

        <!--Goal Card-->
        <div class="col mb-3 gallery-col align-items-stretch">
          <div class="card h-100" id="<%= id %>" onmouseover="toggleMoreOptionsOn(id)" onmouseout="toggleMoreOptionsOff(id)">
            <div class="dropdown" id="option-<%= id %>" style="visibility: hidden">
              <img src="/assets/img/buttons/more-options.png" class="dropbtn"/>
              <%- include('./dropdown.ejs'); %>
            </div>
            <div class="card-body d-flex flex-column" id="goal">
              <h5 class="card-title" id="card-title-<%= id %>">
                  <%= name %>
              </h5>
              <div id="card-desc-<%= id %>"></div>
              <div>
                <% if (content) { %>
                  <ul class="list-group list-group-flush list-grid">
                    <% content.slice(0,8).forEach((item) => { %>
                      <li class="list-group-item item-list" title='Open <%=item%>'> <span class="material-icons" style="color: blue">&nbsp;description</span><span class="item-list-text"><%= item %></span></li>
                    <% }) %>
                  </ul>
                <% } %>
              </div>
            </div>
            <div class="card-footer" >
              <% for(let i=0; i < tags.length; i++) { %>
                <span class="badge badge-primary topic-badge">
                  <%= tags[i]%>
                </span>
              <% } %>
              <span class="badge badge-dark note-badge">
                <%= contentType %>
              </span>
            </div>
          </div>
        </div>
      <% }}%>
          
      <!--View Toggle-->
      <%- include('./view-toggle.ejs'); %>

      <!--Displaying Cards-->
      <hr class="mt-0">
      <div class="container">
        <% for (let i = 0; i < availableResources.length + 1; i++) { 
          if (i === 0) { %>
            <div class="row row-cols-1 row-cols-md-3 g-4 ">
              <div class="col mb-3 gallery-col align-items-stretch">
                <div class="card h-100" data-toggle="modal" data-target="#new-topic-goal-modal">
                  <div class="card-body d-flex flex-column" style="margin-top: 8%" id="add">
                    <img src="/assets/img/buttons/new-content.png" class="mx-auto d-block btn-add-content" alt="Add content"/>
                  </div>
                </div>
              </div>
          <% } else { 
            if (i % 2 === 0) { %>
              <% renderCard(i,availableResources[i-1].resourceName,availableResources[i-1].resourceDescription,["Bio","Chem"],"Note", null)
            } else {
              renderCard(i,availableResources[i-1].resourceName,availableResources[i-1].resourceDescription,["Bio","Chem"],"Goal", ["Doc 1","Doc 2","Doc 3", "Doc 4","Doc 5"])
            } %>
          <% }} %>
      </div>
    </body>

</html>


